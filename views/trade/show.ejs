<%- include('../partials/header.ejs')%>
    <div class = "showDiv">
        <div>
            <p>Title: <%= trade.title%></p>
            <p>Category : <%= trade.category%></p>
            <p>Details : <%= trade.details%></p>
            <p>Trading status : <%= trade.Status%></p>            
            <img style="height: 250px;" alt="<%= trade.title%>" src="<%= trade.image%>">
        </div>
        <%
       if(user == trade.author._id) {%>
        <form>
          <button type = "submit" formmethod = "GET" formaction = "/trades/<%= trade.id%>/edit">Edit</button>
          <button type = "submit" formmethod = "POST" formaction = "/trades/<%= trade.id%>?_method=DELETE">Delete</button>
       </form>
          </div>
          <%}if(user != trade.author._id){%>
            <div>
              <h3>Intrested in trading this Trade?</h3>
              <br>
              <form >
              <button type = "submit" name = response formmethod = "GET" formaction = "/trades/<%= trade.id%>/startTrading">Trade</button>
              <%if(!watched){%>
                  <button type = "submit" name = response formmethod = "POST" formaction = "/trades/<%= trade.id%>/watch">Watch</button>
              <%}else{%>
                  <button type = "submit" name = response formmethod = "POST" formaction = "/trades/<%= trade.id%>/unWatch?_method=delete">UnWatch</button>
              </form>
              <%}%>
            </div>
            <%}%>
    
    
    <%- include('../partials/footer.ejs')%>