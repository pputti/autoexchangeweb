<%- include('../partials/header.ejs')%>
<div class="showDiv">
    <form method="post" action="/trades/<%= trade.id%>?_method=PUT">
        <table>
            <tr>
                <td><label for="title" >Title</label></td>
                <td><input type="text" id="title" name="title" value = "<%= trade.title%>" class = "fixed-width" required></td>
            </tr>
            <tr><td class = "align-top"><label for="details">Details</label></td>
                <td><textarea rows="5" id="details" name="details" class = "fixed-width" required minlength="10"><%= trade.details%></textarea></td>
            </tr>
            <tr>
                <td><label for="title" >Category</label></td>
                <td><input type="text" id="category" name="category" required value = "<%= trade.category%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="title" >Image link</label></td>
                <td><input type="text" id="image" name="image" value = "<%= trade.image%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
            </table>        
    </form>
</div>
<% if(errorMessages.length > 0) {%>
    <% errorMessages.forEach(message=>{%>
        <div class='error'>
            <%=message%>
        </div>
        <%});%>
            <%}%>

                <% if(successMessages.length > 0) {%>

                    <% successMessages.forEach(message=>{%>
                        <div class='success'>
                            <%=message%>
                        </div>
                        <%});%>
                            <%}%>


